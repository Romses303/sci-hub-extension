{
  "manifest_version": 3,
  "name": "Sci-Hub easy access",
  "version": "1.5",
  "description": "Open an article by its title or DOI via Sci-Hub in just a few clicks!",
  "permissions": [
    "contextMenus",
    "activeTab",
    "scripting",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "*://*/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html"
  }
}
